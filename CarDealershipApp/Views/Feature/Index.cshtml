@model IEnumerable<CarDealership.ViewModels.Models.FeatureViewModels.FeatureIndexViewModel>

@{
    ViewData["Title"] = "Features";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<h1>Features</h1>

<a asp-action="Add" class="btn btn-primary">Add New Feature</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feature in Model)
        {
            <tr>
                <td>@feature.Id</td>
                <td>@feature.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@feature.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@feature.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this feature?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

