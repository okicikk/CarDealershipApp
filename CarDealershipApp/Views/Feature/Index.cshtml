@model IEnumerable<CarDealership.ViewModels.Models.FeatureViewModels.FeatureIndexViewModel>

@{
    ViewData["Title"] = "Features";
}

<h1>Features</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feature in Model)
        {
            <tr>
                <td>@feature.Id</td>
                <td>@feature.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@feature.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@feature.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Feature</a>
