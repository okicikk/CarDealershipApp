@model CarDealership.ViewModels.Models.Car.CarEditViewModel

@{
    ViewData["Title"] = "Edit Car";
}

<h2>Edit Car</h2>

<form asp-action="Edit" asp-controller="Car" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- Category Selection -->
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.AvailableCategories, "Id", "Name"))">
            <option value="">Select a Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <!-- Weight -->
    <div class="form-group">
        <label asp-for="Weight" class="control-label">Weight</label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Mileage -->
    <div class="form-group">
        <label asp-for="Mileage" class="control-label">Mileage</label>
        <input asp-for="Mileage" class="form-control" type="number" min="0" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <!-- Features Selection (Checkboxes) -->
    <div class="form-group">
        <label class="control-label">Select Features</label>
        <div>
            @foreach (var feature in Model.AvailableFeatures)
            {
                <div>
                    <input type="checkbox" name="SelectedFeaturesIds" value="@feature.Id"
                           @if (Model.SelectedFeaturesIds.Contains(feature.Id))
                           {
                        <text>checked</text>
                    }
     />
                    <label>@feature.Name</label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedFeaturesIds" class="text-danger"></span>
    </div>

    <!-- Image section -->
    <div class="form-group">
        <label class="control-label">Car Images</label>

        @if (Model.ExistingImages != null && Model.ExistingImages.Any())
        {
            <div class="mb-2 d-flex flex-wrap">
                @foreach (var img in Model.ExistingImages)
                {
                    <div class="me-2 mb-2 text-center" style="max-width:150px;">
                        <img src="@Url.Content(img.FilePath)" alt="Car image" style="max-width:150px; display:block; margin-bottom:4px;" />
                        <div>
                            <!-- Checkbox posts multiple values into ImageIdsToRemove list -->
                            <input type="checkbox" name="ImageIdsToRemove" value="@img.Id" id="rem_@img.Id" />
                            <label for="rem_@img.Id">Remove</label>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No images.</p>
        }

        @{
            var remainingSlots = 4 - (Model.ExistingImages?.Count() ?? 0);
            if (remainingSlots < 0) remainingSlots = 0;
        }

        @if (remainingSlots > 0)
        {
            <label>Upload up to @remainingSlots more image(s)</label>
            <input type="file" name="Images" id="ImagesInput" multiple accept="image/*" class="form-control" />
            <small class="form-text text-muted">You can upload up to @remainingSlots more image(s).</small>
        }
        else
        {
            <p class="text-muted">Maximum of 4 images reached. Remove existing images to upload new ones.</p>
        }
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

@{
    // calculate it here so it's available below
    var remainingSlots = 4 - (Model.ExistingImages?.Count() ?? 0);
    if (remainingSlots < 0) remainingSlots = 0;
}

@section Scripts {
    <script>
        (function() {
            var remaining = @remainingSlots;

            if (remaining > 0) {
                var input = document.getElementById('ImagesInput');
                if (input) {
                    input.addEventListener('change', function (e) {
                        if (this.files && this.files.length > remaining) {
                            alert('You may only upload ' + remaining + ' more image(s).');
                            this.value = ''; // clear selection
                        }
                    });
                }
            }
        })();
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}