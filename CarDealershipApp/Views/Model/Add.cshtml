@model CarDealership.ViewModels.Models.Model.ModelAddViewModel

@{
    ViewData["Title"] = "Add Model";
} 

<h2>Add Model</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BrandId" class="control-label">Brand</label>
        <select asp-for="BrandId" class="form-control" asp-items="@(new SelectList(Model.Brands, "Id", "Name"))">
            <option value=""> Select a Brand </option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Model</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
